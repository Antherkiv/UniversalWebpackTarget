{
    "defaultSeverity": "warning",
    "extends": [
        "tslint-react",
        "tslint-config-airbnb",
        "tslint-plugin-prettier"
    ],
    "jsRules": {
        "no-empty": true
    },
    "rules": {
        "import-name": false,
        "ter-arrow-parens": [true, "as-needed"],
        "class-name": true,
        "forin": true,
        "jsdoc-format": true,
        "jsx-boolean-value": [
            true,
            "never"
        ],
        "max-line-length": [true, 100],
        "jsx-no-multiline-js": false,
        "member-access": true,
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ]
    }
}
